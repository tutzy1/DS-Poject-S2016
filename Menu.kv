#:import Button kivy.uix.button.Button

<Menu>:
    path: ''
    index_select: ''
    query: ''
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        ActionButton:
            text: 'Go to the main menu'
            font_size: 25
            size_hint: .10, .12
            icon: 'icons/home_icon&48.png'
            on_press:
                root.history.append(str(_screen_manager.current))
                _screen_manager.current = 'MainScreen'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        ActionButton:
            text: '     Back to \n  Last Screen'
            font_size: 15
            size_hint: .10, .12
            icon: 'icons/sq_br_prev_icon&48.png'
            on_press:
                _screen_manager.current = root.GetLastScreen()
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        ScreenManager:
            size_hint: .8, .80
            id: _screen_manager
            Screen:
                name: 'MainScreen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: 100, 50
                    spacing: 5
                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            text: "Load documents to the index"
                            font_size: 25
                            on_press:
                                root.Update_Index()
                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            text: "Get data about the index"
                            font_size: 25
                            on_press:
                                root.Doc_Count = str(root.Index.documentCount())
                                root.history.append('MainScreen')
                                _screen_manager.current = 'IndexDetails'
                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            text: "Go to the Ranker Environment"
                            font_size: 25
                            on_press:
                                root.history.append('MainScreen')
                                _screen_manager.current = 'Ranker'
                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            text: "Get data about the queries database"
                            font_size: 25
                            on_press:
                                root.Queries_Count = str(len(root.Ranker_Environment.getQueriesMetadata('number')))
                                root.history.append('MainScreen')
                                _screen_manager.current = 'QueriesDetails'
                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            text: "Go to the pickle manager"
                            font_size: 25
                            on_press:
                                root.history.append('MainScreen')
                                _screen_manager.current = 'PickleManager'

            Screen:
                name: 'Ranker'
                BoxLayout:
                    orientation: 'vertical'
                    padding: 50, 50
                    spacing: 5
                    Label:
                        text: "[b]The Ranker Environment[/b]"
                        font_size: 50
                        markup: True
                        size_hint: 1, .3
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'bottom'
                        Button:
                            text: "Load queries to the database"
                            font_size: 25
                            size_hint: .8, .65
                            on_press:
                                root.Load_Queries()
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        Button:
                            text: "Run the queries from the database"
                            font_size: 25
                            size_hint: .8, .65
                            on_press:
                                root.Get_Limit()
                                root.history.append('Ranker')
                                _screen_manager.current = 'RunQueriesMenu'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        Button:
                            height: '35dp'
                            text: "Run Query"
                            font_size: 25
                            size_hint: .8, .65
                            on_press:
                                root.history.append('Ranker')
                                _screen_manager.current = 'QueryInput'

            Screen:
                name: 'RunQueriesMenu'
                BoxLayout:
                    orientation: 'vertical'
                    padding: 150, 50
                    spacing: 20
                    Label:
                        text: "[b]Run queries from the database[/b]"
                        font_size: 40
                        markup: True
                        size_hint: 1, .2
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'bottom'
                        Button:
                            text: "Show results on the screen"
                            font_size: 25
                            size_hint: 1, .7
                            on_press:
                                sl.text = root.Ranker_Environment.runQueries(limit=root.limit)
                                root.history.append('RunQueriesMenu')
                                _screen_manager.current = 'OutputScreen'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        Button:
                            text: "Save results to file"
                            font_size: 25
                            size_hint: 1, .7
                            on_press:
                                root.Run_Queries_File(root.limit)
                                root.history.append('RunQueriesMenu')
                                _screen_manager.current = 'MainScreen'

            Screen:
                name: 'RunQueryMenu'
                BoxLayout:
                    orientation: 'vertical'
                    padding: 150, 50
                    spacing: 20
                    Label:
                        text: "[b]Run query[/b]"
                        font_size: 50
                        markup: True
                        size_hint: 1, .2
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'bottom'
                        Button:
                            text: "Show results on the screen"
                            font_size: 25
                            size_hint: 1, .7
                            on_press:
                                sl.text = root.Ranker_Environment.runQuery(query=InputQuery.text, limit=root.limit)
                                root.history.append('RunQueryMenu')
                                _screen_manager.current = 'OutputScreen'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        Button:
                            text: "Save results to file"
                            font_size: 25
                            size_hint: 1, .7
                            on_press:
                                root.Run_Query_File(InputQuery.text, limit=root.limit)
                                root.history.append('RunQueryMenu')
                                _screen_manager.current = 'MainScreen'

            Screen:
                name: 'QueryInput'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 5
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'bottom'
                        size_hint: 1, .2
                        Label:
                            text: "[b]Run Query[/b]"
                            font_size: 50
                            markup: True
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Please insert the query:"
                            font_size: 20
                            size_hint: .6, 1
                        TextInput:
                            id: InputQuery
                            hint_text: "Query..."
                            font_size: 20
                            multiline: True
                            size_hint_y: .8
                    AnchorLayout:
                        size_hint: 1, .4
                        anchor_x: 'center'
                        Button:
                            text: 'Submit'
                            font_size: 35
                            size_hint: .3, .4
                            on_press:
                                root.Get_Limit()
                                root.history.append('QueryInput')
                                _screen_manager.current = 'RunQueryMenu'
            Screen:
                name: 'OutputScreen'
                BoxLayout:
                    orientation: "vertical"
                    ScrollLabel:
                        id: sl
                        text: ''
                        font_size: sl_fontsize.value
                    BoxLayout:
                        size_hint_y: None
                        height: "48sp"
                        Label:
                            text: "Font size"
                            size_hint_x: None
                            width: self.texture_size[0] + dp(48)
                        Slider:
                            id: sl_fontsize
                            min: sp(8)
                            max: sp(100)
                            value: sp(14)
            Screen:
                __safe_id: [dropdown1.__self__]
                name: 'IndexDetails'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: '[b]Get metadata of the index[/b]'
                        markup: True
                        font_size: 40
                        size_hint: 1, .7
                    Label:
                        text: "The current number of document in the index: " + root.Doc_Count
                        font_size: 20
                        size_hint: 1, .7

                    Button:
                        id: btn
                        text: 'Choose the data to print'
                        on_release: dropdown1.open(self)
                        size_hint_y: None
                        height: '35dp'

                    Widget

                    DropDown:

                        id: dropdown1
                        on_parent: self.dismiss()
                        on_select: btn.text = args[1]
                        height: '40dp'

                        Button:
                            text: 'Print the ID\'s of all the documents in the index'
                            size_hint_y: None
                            height: '35dp'
                            on_release:
                                dropdown1.select(self.text)
                                sl2.halign = 'center'
                                sl2.text = root.PrintDocsIDs()

                        Button:
                            text: 'Print all the documents in the index'
                            size_hint_y: None
                            height: '35dp'
                            on_release:
                                dropdown1.select(self.text)
                                sl2.halign = 'left'
                                sl2.text = root.PrintDocs()

                    ScrollLabel:
                        id: sl2
                        size_hint: 1, 3.5
                        text: ''
                        font_size: sl2_fontsize.value
                    BoxLayout:
                        size_hint_y: None
                        height: "48sp"
                        Label:
                            text: "Font size"
                            size_hint_x: None
                            width: self.texture_size[0] + dp(48)
                        Slider:
                            id: sl2_fontsize
                            min: sp(8)
                            max: sp(100)
                            value: sp(14)
            Screen:
                __safe_id: [dropdown2.__self__]
                name: 'QueriesDetails'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: '[b]Get metadata of the queries database[/b]'
                        markup: True
                        font_size: 34
                        size_hint: 1, .7
                    Label:
                        text: "The current number of queries in the database: " + root.Queries_Count
                        font_size: 20
                        size_hint: 1, .7

                    Button:
                        id: btn2
                        text: 'Choose the data to print'
                        on_release: dropdown2.open(self)
                        size_hint_y: None
                        height: '35dp'

                    Widget

                    DropDown:

                        id: dropdown2
                        on_parent: self.dismiss()
                        on_select: btn2.text = args[1]
                        height: '40dp'

                        Button:
                            text: 'Print the ID\'s of all the queries in the database'
                            size_hint_y: None
                            height: '35dp'
                            on_release:
                                dropdown2.select(self.text)
                                sl3.halign = 'center'
                                sl3.text = root.PrintQueriesIDs()

                        Button:
                            text: 'Print all the queries in the database'
                            size_hint_y: None
                            height: '35dp'
                            on_release:
                                dropdown2.select(self.text)
                                sl3.halign = 'left'
                                sl3.text = root.PrintQueries()

                    ScrollLabel:
                        id: sl3
                        size_hint: 1, 3.5
                        text: ''
                        font_size: sl3_fontsize.value
                    BoxLayout:
                        size_hint_y: None
                        height: "48sp"
                        Label:
                            text: "Font size"
                            size_hint_x: None
                            width: self.texture_size[0] + dp(48)
                        Slider:
                            id: sl3_fontsize
                            min: sp(8)
                            max: sp(100)
                            value: sp(14)

            Screen:
                name: 'PickleManager'
                BoxLayout:
                    orientation: 'vertical'
                    padding: 150, 50
                    spacing: 20
                    Label:
                        text: "[b]Pickle Manager[/b]"
                        font_size: 50
                        markup: True
                        size_hint: 1, .2
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'bottom'
                        Button:
                            text: "Load index from pickle"
                            font_size: 25
                            size_hint: 1, .7
                            on_press:
                                root.Load_Pickle()
                                root.history.append('PickleManager')
                                _screen_manager.current = 'MainScreen'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        Button:
                            text: "Save index to pickle"
                            font_size: 25
                            size_hint: 1, .7
                            on_press:
                                root.Save_to_pickle()
                                root.history.append('PickleManager')
                                _screen_manager.current = 'MainScreen'

